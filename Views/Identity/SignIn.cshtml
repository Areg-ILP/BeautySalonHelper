@using BeautySalonService.ViewModels.Identity
@model SignInViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="bgImg">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                    <a href="@Url.Action("Home", "Home")">
                        <img src="~/IdentityFront/img/logo.png" alt="logo" width="100">
                    </a>
                </div>
                <div class="card shadow-lg">
                    <div class="card-body p-5 formCard">
                        <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                        <form method="POST" asp-action="Login" asp-controller="Identity" class="needs-validation" novalidate="" autocomplete="off">
                            <div class="mb-3">
                                <label class="mb-2 text-muted" for="email">E-Mail</label>
                                <input id="email" type="email" class="form-control" name="email" value="" required autofocus>
                            </div>

                            <div class="mb-3">
                                <div class="mb-2 w-100">
                                    <label class="text-muted" for="password">Password</label>
                                </div>
                                <input id="password" type="password" class="form-control" name="password" required>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="submit" class="identityButton btn btn-primary">
                                    Login
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            <p>Don't have an account?
                                <a href="@Url.Action("SignUp", "Identity")" class="text-dark">Create One
                                </a>
                            </p>
                            <p>Back to 
                                <a href="@Url.Action("Home", "Home")" class="text-dark">Home
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~IdentityFront/js/login.js"></script>
